{
    "compilerOptions": {
      "target": "ES2022",
      "module": "Nodenext",
      "moduleResolution": "Nodenext",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules",  "src/__tests__"]
  }
  